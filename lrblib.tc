getprop char file(0),request(0),tcbuff(0);int bufflen;char default(0) [ // returns pointer to text following request
 return MC file,request,tcbuff,bufflen,default,116
 ]

putprop char file(0),request(0),replace(0) [ // replaces text following request
 int m,rl,bufflen
 char tcbuff(300)
 rl=strlen request
 char buff(5000)
 char wstripl(5000),wstripm(5000),wstripr(5000)
 bufflen=readfile file,buff,5000-1
 if bufflen<=0 [printf "%cfile not found",10;abort]
 buff(bufflen)=0
 if (m=index(buff,bufflen,request,rl)) [
  m=m+rl-1
  strcpy wstripl,buff;wstripl(m)=0
  strcpy wstripm,replace
  while ((buff(m)!=10)) m=m+1
  strcpy wstripr,buff+m
  strcpy tcbuff,wstripl;strcat tcbuff,wstripm;strcat tcbuff,wstripr
  writefile file,tcbuff,strlen(tcbuff)
  ]
  else printf "%cnot found%c",10,10
 ]

